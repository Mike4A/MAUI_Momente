<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Momente.MomentPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:customViews="clr-namespace:Momente.CustomViews"
    xmlns:local="clr-namespace:Momente"
    Title="MomentPage"
    BackgroundColor="{AppThemeBinding Light={StaticResource White},
                                      Dark={StaticResource Black}}"
    Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="84,*,128,55">

        <Grid ColumnDefinitions="80,*">

            <Grid Margin="3,3,1,1">

                <customViews:GlowingBorderView
                    CornerRadius="25,5,5,5"
                    GlowColor="{Binding Color}"
                    InputTransparent="True"/>

                <Entry
                    x:Name="IconEntry"
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="5"
                    Completed="IconEntry_Completed"
                    Focused="IconEntry_Focused"
                    FontSize="36"
                    HorizontalTextAlignment="Center"
                    Keyboard="Chat"
                    Placeholder="âœ"
                    Text="{Binding Icon}"
                    TextChanged="IconEntry_TextChanged"
                    VerticalTextAlignment="Center" />

            </Grid>

            <Grid Grid.Column="1" Margin="1,3,3,1">

                <customViews:GlowingBorderView
                    CornerRadius="5,25,5,5"
                    GlowColor="{Binding Color}"
                    InputTransparent="True"/>

                <Grid Padding="3,1,3,0" RowDefinitions="*,1.6*">

                    <Label
                        x:Name="CreatedAtLabel"
                        Margin="9,9,0,0"
                        FontSize="10"
                        FontAttributes="Bold"
                        Text="{Binding CreatedAtString}"
                        TextColor="{StaticResource Gray500}"
                        VerticalTextAlignment="Center" />

                    <Entry
                        x:Name="HeadlineEntry"
                        Grid.Row="1"
                        Margin="5"
                        Completed="HeadlineEntry_Completed"
                        FontSize="14"
                        Text="{Binding Headline}"
                        VerticalTextAlignment="Center" />

                </Grid>

            </Grid>

        </Grid>

        <Grid Grid.Row="1" Margin="3,1,3,1">

            <customViews:GlowingBorderView
                CornerRadius="5,5,5,5"
                GlowColor="{Binding Color}"
                InputTransparent="True"/>
            
            <ScrollView Margin="8">

                <Editor
                    x:Name="DescriptionEditor"
                    Grid.Row="2"
                    Margin="3"
                    AutoSize="TextChanges"
                    Completed="DescriptionEditor_Completed"
                    FontSize="14"
                    HorizontalTextAlignment="Center"
                    Placeholder="âœ"
                    Text="{Binding Description}" />

            </ScrollView>

        </Grid>

        <Grid Grid.Row="2" Margin="3,1,3,3">

            <customViews:GlowingBorderView
                CornerRadius="5,5,25,25"
                GlowColor="{Binding Color}"
                InputTransparent="True"/>

            <customViews:ColorSliderView Color="{Binding Color}" />

        </Grid>

        <Grid
            Grid.Row="3"
            Margin="3,0,3,4"
            Padding="0"
            ColumnDefinitions="*,*,*">

            <Button
                x:Name="CancelButton"
                Grid.Column="0"
                Margin="4"
                Padding="0"
                Clicked="CancelButton_Clicked"
                Command="{Binding CancelButtonCommand}"
                FontSize="24"
                Text="ðŸ”™" />

            <Button
                x:Name="DeleteButton"
                Grid.Column="1"
                Margin="4"
                Padding="0"
                Clicked="DeleteButton_Clicked"
                Command="{Binding DeleteButtonCommand}"
                FontSize="24"
                Text="ðŸš®" />

            <Button
                x:Name="SaveButton"
                Grid.Column="2"
                Margin="4"
                Padding="0"
                Clicked="SaveButton_Clicked"
                Command="{Binding SaveButtonCommand}"
                FontSize="24"
                Text="âœ“" />

        </Grid>

    </Grid>

</ContentPage>