<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Momente.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Momente"
    Title="MainPage"
    BackgroundColor="{AppThemeBinding Light={StaticResource White},
                                      Dark={StaticResource Black}}"
    Shell.NavBarIsVisible="False">

    <ContentPage.BindingContext>
        <local:MainViewModel />
    </ContentPage.BindingContext>

    <Grid RowDefinitions="*,70">

        <Border
            Margin="3"
            Padding="3"
            BackgroundColor="{AppThemeBinding Light={StaticResource White},
                                              Dark={StaticResource Black}}"
            Stroke="{AppThemeBinding Light={StaticResource Gray400},
                                     Dark={StaticResource Gray500}}"
            StrokeThickness="2"
            StrokeShape="RoundRectangle 16">

            <CollectionView
                x:Name="MomentsCollectionView"
                ItemsSource="{Binding Moments}"
                RemainingItemsThreshold="1"
                RemainingItemsThresholdReached="MomentsCollectionView_RemainingItemsThresholdReached"
                Rotation="180"
                SelectionChanged="MomentsCollectionView_SelectionChanged"
                SelectionMode="Single">

                <CollectionView.ItemTemplate>

                    <DataTemplate>

                        <Grid
                            ColumnDefinitions="64,*"
                            Rotation="180"
                            RowDefinitions="64">

                            <Border
                                Margin="3"
                                Stroke="{Binding Color}"
                                StrokeShape="RoundRectangle 12"
                                StrokeThickness="2">

                                <Label
                                    x:Name="IconLabel"
                                    FontSize="36"
                                    HorizontalTextAlignment="Center"
                                    Text="{Binding Icon}"
                                    VerticalTextAlignment="Center" />

                            </Border>

                            <Border
                                Grid.Column="1"
                                Margin="3"
                                Stroke="{Binding Color}"
                                StrokeShape="RoundRectangle 12"
                                StrokeThickness="2">

                                <Grid RowDefinitions="*,*">

                                    <Label
                                        x:Name="CreatedAtLabel"
                                        Padding="6,3,6,3"
                                        FontSize="10"
                                        Text="{Binding CreatedAtString}"
                                        TextColor="{AppThemeBinding Light={StaticResource Gray500},
                                                                    Dark={StaticResource Gray400}}"
                                        VerticalTextAlignment="End" />

                                    <Label
                                        x:Name="HeadlineLabel"
                                        Grid.Row="1"
                                        Padding="6,3,6,3"
                                        FontSize="14"
                                        Text="{Binding Headline}"
                                        VerticalTextAlignment="Start" />

                                </Grid>

                            </Border>

                        </Grid>

                    </DataTemplate>

                </CollectionView.ItemTemplate>

            </CollectionView>

        </Border>

        <Border
            Grid.Row="1"
            Grid.Column="0"
            Margin="3"
            Padding="3"
            BackgroundColor="{AppThemeBinding Light={StaticResource White},
                                              Dark={StaticResource Black}}"
            Stroke="{AppThemeBinding Light={StaticResource Gray400},
                                     Dark={StaticResource Gray500}}"
            StrokeThickness="2"
            StrokeShape="RoundRectangle 24">

            <Grid ColumnDefinitions="*,*,*">

                <Button
                    x:Name="SwitchThemeButton"
                    Margin="6"
                    Padding="0"
                    Clicked="SwitchThemeButton_Clicked"
                    FontSize="24"
                    Text="🌛" />

                <Button
                    x:Name="QuitButton"
                    Grid.Column="1"
                    Margin="6"
                    Padding="0"
                    Clicked="QuitButton_Clicked"
                    FontSize="24"
                    Text="🚪" />

                <Button
                    x:Name="AddMomentButton"
                    Grid.Column="2"
                    Margin="6"
                    Padding="0"
                    Clicked="AddMomentButton_Clicked"
                    FontSize="24"
                    Text="➕" />

            </Grid>

        </Border>

    </Grid>

</ContentPage>
