<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Momente.MomentPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Momente"
    Title="MomentPage">

    <ContentPage.BindingContext>
        <local:MomentViewModel />
    </ContentPage.BindingContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="64" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="0" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="64" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Label
                x:Name="IconLabel"
                Grid.Row="0"
                Grid.Column="0"
                FontSize="32"
                HorizontalTextAlignment="Center"
                Text="O"
                VerticalTextAlignment="Center" />

            <Grid Grid.Row="0" Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Label
                    x:Name="HeadlineLabel"
                    Grid.Row="0"
                    Grid.Column="0"
                    Padding="6"
                    Text="Headline goes here..." />

                <Label
                    x:Name="CreatedAtLabel"
                    Grid.Row="1"
                    Grid.Column="0"
                    Padding="6"
                    Text="Erstellt am {Datum} um {Uhrzeit}"
                    TextColor="{StaticResource Gray500}" />
            </Grid>
        </Grid>

        <Label
            x:Name="DescriptionLabel"
            Grid.Row="1"
            Grid.Column="0"
            Padding="9"
            Text="Das ist ein Platzhalter text. Er wollte immer schon einer werden, nun hat er es geschafft. Er freut sich und strahlt derart von innen heraus, dass er einer Supernova gleicht :)" />
    </Grid>

</ContentPage>