<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Momente.MomentPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Momente"
    Title="MomentPage"
    BackgroundColor="{AppThemeBinding Light={StaticResource White},
                                      Dark={StaticResource Black}}"
    Shell.NavBarIsVisible="False">

    <ContentPage.BindingContext>
        <local:MomentViewModel />
    </ContentPage.BindingContext>

    <Grid Margin="3">
        <Grid.RowDefinitions>
            <RowDefinition Height="86" />
            <RowDefinition Height="*" />
            <RowDefinition Height="128" />
            <RowDefinition Height="70" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="0" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="86" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border
                Grid.Row="0"
                Grid.Column="0"
                Margin="3"
                Padding="3"
                BackgroundColor="{AppThemeBinding Light={StaticResource Gray100},
                                                  Dark={StaticResource Gray900}}"
                Stroke="{AppThemeBinding Light={StaticResource Gray400},
                                         Dark={StaticResource Gray500}}">

                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="16" />
                </Border.StrokeShape>

                <Entry
                    x:Name="IconEntry"
                    Grid.Row="0"
                    Grid.Column="0"
                    Focused="IconEntry_Focused"
                    FontSize="36"
                    HorizontalTextAlignment="Center"
                    Keyboard="Chat"
                    Text="{Binding Icon}"
                    TextChanged="IconEntry_TextChanged"
                    VerticalTextAlignment="Center" />
            </Border>

            <Border
                Grid.Row="0"
                Grid.Column="1"
                Margin="3"
                Padding="3"
                BackgroundColor="{AppThemeBinding Light={StaticResource Gray100},
                                                  Dark={StaticResource Gray900}}"
                Stroke="{AppThemeBinding Light={StaticResource Gray400},
                                         Dark={StaticResource Gray500}}">

                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="16" />
                </Border.StrokeShape>

                <Grid Grid.Row="0" Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="1.6*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Label
                        x:Name="CreatedAtLabel"
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="3"
                        Padding="3"
                        FontSize="10"
                        Text="{Binding CreatedAtString}"
                        TextColor="{StaticResource Gray500}"
                        VerticalTextAlignment="Center" />

                    <Entry
                        x:Name="HeadlineEntry"
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="3"
                        FontSize="14"
                        Placeholder="Ãœberschrift..."
                        Text="{Binding Headline}" />
                </Grid>
            </Border>

        </Grid>

        <Border
            Grid.Row="1"
            Grid.Column="0"
            Margin="3"
            Padding="3"
            BackgroundColor="{AppThemeBinding Light={StaticResource Gray100},
                                              Dark={StaticResource Gray900}}"
            Stroke="{AppThemeBinding Light={StaticResource Gray400},
                                     Dark={StaticResource Gray500}}">

            <Border.StrokeShape>
                <RoundRectangle CornerRadius="16" />
            </Border.StrokeShape>

            <Editor
                x:Name="DescriptionEditor"
                Grid.Row="2"
                Grid.Column="0"
                FontSize="14"
                HorizontalTextAlignment="Center"
                Placeholder="Beschreibung..."
                Text="{Binding Description}" />
            
        </Border>

        <Border
            Grid.Row="2"
            Grid.Column="0"
            Margin="3"
            Padding="3"
            BackgroundColor="{AppThemeBinding Light={StaticResource Gray100},
                                              Dark={StaticResource Gray900}}"
            Stroke="{AppThemeBinding Light={StaticResource Gray400},
                                     Dark={StaticResource Gray500}}">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="16" />
            </Border.StrokeShape>
            
            <Picker Title="" />
            
        </Border>
        
        <Border
            Grid.Row="3"
            Grid.Column="0"
            Margin="3"
            Padding="3"
            BackgroundColor="{AppThemeBinding Light={StaticResource Gray100},
                                              Dark={StaticResource Gray900}}"
            Stroke="{AppThemeBinding Light={StaticResource Gray400},
                                     Dark={StaticResource Gray500}}">

            <Border.StrokeShape>
                <RoundRectangle CornerRadius="24" />
            </Border.StrokeShape>

            <Grid Grid.Row="2" Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Button
                    x:Name="DeleteButton"
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="6"
                    Padding="0"
                    Clicked="DeleteButton_Clicked"
                    FontSize="24"
                    Text="ðŸš®" />

                <Button
                    x:Name="CancelButton"
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="6"
                    Padding="0"
                    Clicked="CancelButton_Clicked"
                    FontSize="24"
                    Text="ðŸšª" />

                <Button
                    x:Name="SaveButton"
                    Grid.Row="0"
                    Grid.Column="2"
                    Margin="6"
                    Padding="0"
                    Clicked="SaveButton_Clicked"
                    Command="{Binding SaveMomentCommand}"
                    FontSize="24"
                    Text="ðŸ’¾" />
            </Grid>
        </Border>

    </Grid>
</ContentPage>