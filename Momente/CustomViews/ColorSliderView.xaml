<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="Momente.CustomViews.ColorSliderView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:customViews="clr-namespace:Momente.CustomViews">

    <Grid Margin="3,1,3,3">

        <Grid
            Grid.Column="1"
            Margin="9"
            RowDefinitions="*,*,*">

            <Border
                Grid.Row="0"
                Margin="3"
                StrokeShape="RoundRectangle 20">

                <Grid>

                    <customViews:ColorSliderBackgroundView x:Name="HueGraphicsView" Margin="12,0,12,0" />

                    <Slider
                        x:Name="HueSlider"
                        Margin="-4,0,-4,0"
                        ValueChanged="HueSlider_ValueChanged" />

                </Grid>

            </Border>

            <Border
                Grid.Row="1"
                Margin="3"
                StrokeShape="RoundRectangle 20">

                <Grid>

                    <customViews:ColorSliderBackgroundView x:Name="SaturationGraphicsView" Margin="12,0,12,0" />

                    <Slider
                        x:Name="SaturationSlider"
                        Margin="-4,0,-4,0"
                        ValueChanged="SaturationSlider_ValueChanged" />

                </Grid>

            </Border>

            <Border
                Grid.Row="2"
                Margin="3"
                StrokeShape="RoundRectangle 20">

                <Grid>

                    <customViews:ColorSliderBackgroundView x:Name="LuminosityGraphicsView" Margin="12,0,12,0" />

                    <Slider
                        x:Name="LuminositySlider"
                        Margin="-4,0,-4,0"
                        ValueChanged="LuminositySlider_ValueChanged" />

                </Grid>

            </Border>

        </Grid>

    </Grid>


</ContentView>
